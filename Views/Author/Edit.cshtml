@model Library.Models.AuthorModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>
<h4>Student</h4>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Edit" method="post">
                <div class="mb-3">
                    <label asp-for="Name">Nombre</label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PaternalSurname">Apellido Paterno</label>
                    <input asp-for="PaternalSurname" class="form-control"/>
                    <span asp-validation-for="PaternalSurname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MaternalSurname">Apellido Materno</label>
                    <input asp-for="MaternalSurname" class="form-control"/>
                    <span asp-validation-for="MaternalSurname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone">Teléfono</label>
                    <input asp-for="Phone" class="form-control"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address">Dirección</label>
                    <input asp-for="Address" class="form-control"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
